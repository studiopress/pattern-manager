{
	"compilerOptions": {
		"rootDir": "src",
		"composite": true,
		"allowJs": true,
		"checkJs": true,

		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"esModuleInterop": false,
		"resolveJsonModule": true,

		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "build-types",
		"jsx": "preserve",
		"target": "esnext",
		"module": "esnext",
		"lib": [ "dom", "esnext" ],
		"moduleResolution": "node"
	},
	"skipLibCheck": true,
	"include": [ "src/**/*" ]
}
