{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"target": "esnext",
		"module": "esnext",
		"lib": [ "dom", "esnext" ],
		"moduleResolution": "node",
		"noEmit": true
	},
	"skipLibCheck": true,
	"include": [ "src/**/*" ],
	"references": [
		{ "path": "../common" }
	]
}
